<Window x:Class="Ski_Service_2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ski_Service_2"
        mc:Ignorable="d"
        Background="#c4c4c4"
        Title="Ski Servirce" Height="400" Width="420">
    <Border Background="#474747" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="35" HorizontalAlignment="Center"/>
            <Separator Width="250"/>
            <Label Content="Benutzername" Foreground="White" FontSize="20"/>
            <TextBox x:Name="txtUsername" FontSize="20" Background="#c4c4c4" Margin="0,0,0,20"/>
            <Label Content="Password" Foreground="White" FontSize="20"/>
            <PasswordBox x:Name="txtPassword" FontSize="20" Background="#c4c4c4" Margin="0,0,0,20"/>
            <Button x:Name="btnLogin" 
                    Content="Anmelden" 
                    FontSize="20" 
                    Background="#c4c4c4"
                    Foreground="White"
                    Margin="90,10,90,0"
                    Click="btnLogin_Click"/>
        </StackPanel>
        <!-- color : #2bc496 -->
    </Border>
</Window>
